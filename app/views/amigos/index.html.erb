<table class="table table-dark">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Telefono</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amigos.each do |amigo| %>
      <tr>
        <td><%= amigo.nombre %></td>
        <td><%= amigo.apellido %></td>
        <td><%= amigo.email %></td>
        <td><%= amigo.telefono %></td>
        <td><%= amigo.twitter %></td>
        <td><%= link_to 'Mostrar', amigo, class:"btn btn-secondary" %></td>
        <td><%= link_to 'Editar', edit_amigo_path(amigo), class:"btn btn-secondary" %></td>
        <td><%= link_to 'Eliminar', amigo, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

